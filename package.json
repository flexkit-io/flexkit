{
  "name": "flexkit",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/flexkit-io/flexkit"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "ui:add": "pnpm --filter @flexkit/studio ui:add",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=...@flexkit/cli --filter=...@flexkit/studio && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "eslint": "^8.57.0",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=20.9.0"
  }
}
